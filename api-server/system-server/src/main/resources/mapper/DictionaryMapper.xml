<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.mapper.DictionaryMapper">
    <select id="getDictionaries" parameterType="org.example.api.DictionaryQueryPage" resultType="org.example.entity.system.Dictionary">
        SELECT *
        FROM dictionary
        <where>
            <if test="queryPage.name != null and queryPage.name != ''">
                name LIKE CONCAT('%', #{queryPage.name}, '%')
            </if>
        </where>
    </select>
</mapper>